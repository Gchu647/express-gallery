<style>
  .photo{
    display: : flex;
    flex-flow: row wrap;
    align-items: center;
    margin-top: 10px;
    border: solid 2px lightskyblue;
  }
  img {
    width: 300px;
    height: 300px;
  }
</style>

<div class='collection'>
{{#each collection}}
  <div class='photo'>
    <div>Author: {{author}}</div>
    <img src={{link}}>
    <div>{{description}}</div>
  </div>
{{/each}}
</div>

