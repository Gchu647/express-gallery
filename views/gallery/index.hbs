<style>
  .photo{
    margin-top: 10px;
  }
</style>

<form action='/gallery/new' method='GET'>
  <input type='submit' value='new'>
</form>
<br>
<form action='/logout' method='GET'>
  <input type='submit' value='logout'>
</form>

<div class='collection'>
{{#each collection}}
  <div class='photo'>
    <h3>Author: {{author}}</h3>
    <a href='/gallery/{{id}}'><img src={{link}}></a>
    <p>{{description}}</p>
  </div>
{{/each}}
</div>

